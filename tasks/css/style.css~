li                      { list-style-type: none; } /* Забрати нумерацію за замовчуванням */
ol                      { counter-reset: list1; } /* Инициируем счетчик */
ol li:before            { counter-increment: list1; /* Увеличиваем значение счетчика */
                          content: counter(list1) ". "; /* Выводим число */
                        }
ol ol                   { counter-reset: list2; } /* Инициируем счетчик вложенного списка */
ol ol li:before         { counter-increment: list2; /* Увеличиваем значение счетчика вложенного списка */
                          content: counter(list1) "." counter(list2) ". "; /* Выводим число */
                        }
